<odoo>
  <data>
    <!-- procedure tree,form action -->
    <record model="ir.actions.act_window" id="nunoasegura_procedure_action">
        <field name="name">Procedimientos</field>
        <field name="res_model">nunoasegura.security.procedure</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- procedure tree view -->
    <record id="nunoasegura_procedure_tree" model="ir.ui.view">
        <field name="name">nunoasegura.security.procedure.tree</field>
        <field name="model">nunoasegura.security.procedure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="created_at"/>
                <field name="channel"/>
                <field name="priority" widget="priority"/>
                <field name="description"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <!-- menus -->
    <menuitem id="nunoasegura_menu_root" name="Ñuñoa Segura" web_icon="nunoasegura,static/description/icon.png">
        <menuitem id="nunoasegura_procedure_menu_list" name="Procedimientos" action="nunoasegura_procedure_action"/>
    </menuitem>

    <!-- procedure form view -->
    <record id="nunoasegura_procedure_form" model="ir.ui.view">
            <field name="name">nunoasegura.security.procedure.form</field>
            <field name="model">nunoasegura.security.procedure</field>
            <field name="arch" type="xml">
                <form string="Nuevo procedimiento">
                    <sheet>
                        <group>
                            <group>
                                <field name="created_at"/>
                                <field name="channel"/>
                                
                            </group>
                            <group>
                                
                                <field name="priority" widget="priority"/>
                                <field name="deadline"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="type"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="street"/>
                                <field name="address_number"/>
                                <field name="latitude"/>
                                <field name="longitude"/>
                                <field name="unidad_vecinal"/>
                                <field name="cuadrante"/>
                            </group>
                            <group>
                                <field name="latlon" widget="openstreetmap" nolabel="1"/>
                            </group>
                        </group>
                                                    
                    </sheet>
                    
                </form>
            </field>
        </record>

