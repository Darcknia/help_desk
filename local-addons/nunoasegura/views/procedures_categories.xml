<odoo>
    <data>
      <!-- type tree,form action -->
      <record model="ir.actions.act_window" id="nunoasegura_type_action">
          <field name="name">Tipos de procedimiento</field>
          <field name="res_model">nunoasegura.security.procedure.type</field>
          <field name="view_mode">tree,form</field>
      </record>
  
      <!-- type tree view -->
      <record id="nunoasegura_type_tree" model="ir.ui.view">
          <field name="name">nunoasegura.security.procedure.type.tree</field>
          <field name="model">nunoasegura.security.procedure.type</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="name"/>
                  <!-- <field name="category"/> -->
              </tree>
          </field>
      </record>

      <!-- type form view -->
      <record id="nunoasegura_type_form" model="ir.ui.view">
              <field name="name">nunoasegura.security.procedure.type.form</field>
              <field name="model">nunoasegura.security.procedure.type</field>
              <field name="arch" type="xml">
                  <form string="Nuevo tipo de procedimiento">
                      <sheet>
                          <group>
                            <!-- <field name="category"/> -->
                            <field name="name"/>
                          </group>                    
                      </sheet>
                      
                  </form>
              </field>
          </record>
  

    

    
    <!-- category tree,form action -->
    <record model="ir.actions.act_window" id="nunoasegura_category_action">
        <field name="name">Categoría de procedimiento</field>
        <field name="res_model">nunoasegura.security.procedure.type.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- category tree view -->
    <record id="nunoasegura_category_tree" model="ir.ui.view">
        <field name="name">nunoasegura.security.procedure.type.category.tree</field>
        <field name="model">nunoasegura.security.procedure.type.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="types" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- category form view -->
    <record id="nunoasegura_category_form" model="ir.ui.view">
            <field name="name">nunoasegura.security.procedure.type.category.form</field>
            <field name="model">nunoasegura.security.procedure.type.category</field>
            <field name="arch" type="xml">
                <form string="Nueva categoría de procedimiento">
                    <sheet>
                        <group>
                          <field name="name"/>
                          <field name="types" widget="many2many_tags"/>
                        </group>                    
                    </sheet>
                </form>
            </field>
        </record>
        <!--  -->
    
        <menuitem id="nunoasegura_admin_menu" name="Administración" groups="base.user_admin" parent="nunoasegura_menu_root">
            <!-- <menuitem id="nunoasegura_type_menu_list" name="Tipos" action="nunoasegura_type_action" /> -->
            <menuitem id="nunoasegura_category_menu_list" name="Categorías" action="nunoasegura_category_action"/>
        </menuitem>

    </data>
  </odoo>